# Environment Variables for Voice AI Assistant
# Copy this file to .env and customize as needed

# Debug mode - shows detailed error messages
DEBUG=false

# Verbose mode - shows additional information
VERBOSE=false

# Hugging Face Token (optional, for private models or increased rate limits)
# Get your token at: https://huggingface.co/settings/tokens
# HF_TOKEN=your_token_here

# Model cache directory (optional)
# TRANSFORMERS_CACHE=/path/to/cache

# Force CPU usage even if GPU is available (for testing)
# CUDA_VISIBLE_DEVICES=-1
